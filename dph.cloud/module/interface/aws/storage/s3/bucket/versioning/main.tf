#####################################################
#                                                   #
#                     VARIABLES                     #
#                                                   #
#####################################################

variable "bucket_id" {
  type    = string
  default = ""
}

#####################################################
#                                                   #
#                   CONFIGURATION                   #
#                                                   #
#####################################################

resource "aws_s3_bucket_versioning" "versioning" {
  bucket = var.bucket_id

  versioning_configuration {
    status = "Enabled"
  }
}

